{
    "name": "typeorm-sample",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeORM.",
    "scripts": {
        "start": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
        "build": "tsc -p .",
        "typeorm": "typeorm-ts-node-commonjs",
        "migrate": "rm -rf dist && npm run build && npm run typeorm migration:generate ./src/migrations/initialMigration -- -d ./src/utils/data-source.ts -p",
        "db:log": " npm run typeorm schema:log -- -d ./src/utils/data-source.ts",
        "db:sync": " npm run typeorm schema:sync -- -d ./src/utils/data-source.ts",
        "db:push": "rm -rf dist && npm run build && npm run typeorm migration:run -- -d ./src/utils/data-source.ts",
        "db:revert": "npm run typeorm migration:revert -- -d ./src/utils/data-source.ts",
        "db:drop": "npm run typeorm schema:drop -- -d ./src/utils/data-source.ts",
        "db:show": "npm run typeorm migration:show -- -d ./src/utils/data-source.ts",
        "db:cache:clear": "npm run typeorm cache:clear -- -d ./src/utils/data-source.ts",
        "importData": "npx ts-node-dev --transpile-only --exit-child  src/data/seeder.ts"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.3.9",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "envalid": "^7.3.1",
        "express": "^4.17.2",
        "html-to-text": "^9.0.5",
        "jsonwebtoken": "^9.0.1",
        "mysql2": "^3.6.0",
        "nodemailer": "^6.9.4",
        "redis": "^4.6.7",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.3.17",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/config": "^3.3.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/html-to-text": "^9.0.1",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "@types/node": "^16.11.10",
        "@types/nodemailer": "^6.4.9",
        "morgan": "^1.10.0",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "4.5.2"
    }
}